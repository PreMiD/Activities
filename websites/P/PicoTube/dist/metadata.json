  },
  "logo": "https://i.imgur.com/iXYelOm.jpg",
  "thumbnail": "https://i.imgur.com/Zbv6U4d.png",
  "color": "#e70d0d",
  "url": "picotube.online",
  "tags": [
    "anime",
    "picotube"
  ],
  "category": "anime",
  "iframe": true,
  "settings": [
    {
      "id": "AnimeDetails",
      "title": "Anime Details row1",
      "icon": "fas fa-pen-square",
      "value": "%title%",
      "placeholder": "Use %title%, %episode%"
    },
    {
      "id": "AnimeState",
      "title": "Anime Details row2",
      "icon": "fas fa-pen-square",
      "value": "Episode %episode%",
      "placeholder": "Use %title%, %episode%"
    },
    {
      "id": "ViewAnime",
      "title": "View Anime row1",
      "icon": "fas fa-pen-square",
      "value": "Viewing anime:"
    },
    {
      "id": "ViewAnime2",
      "title": "View Anime row2",
      "icon": "fas fa-pen-square",
      "value": "%title%"
    },
    {
      "id": "ViewSchedule",
      "title": "View Schedule row2",
      "icon": "fas fa-pen-square",
      "value": "Viewing schedule of:"
    },
    {
      "id": "ViewSchedule2",
      "title": "View Schedule row2",
      "icon": "fas fa-pen-square",
      "value": "%day%"
    },
    {
      "id": "buttons",
      "title": "Show Buttons",
      "icon": "fas fa-compress-arrows-alt",
      "value": true
    },
    {
      "id": "timestamp",
      "title": "Show Timestamps",
      "icon": "fad fa-stopwatch",
      "value": true
    },
    {
      "id": "searchQuery",
      "title": "Show Search Query",
      "icon": "fas fa-search",
      "value": true
    }
  ]
