      "id": "showButtons",
      "title": "Show Buttons",
      "icon": "fas fa-link",
      "value": true,
      "if": {
        "privacyMode": false
      }
    },
    {
      "id": "showCover",
      "title": "Show Anime Cover",
      "icon": "fas fa-image",
      "value": true,
      "if": {
        "privacyMode": false
      }
    }
  ]
